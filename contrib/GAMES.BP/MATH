*MATH PROGRAM
100  PRINT @(-1)
     PRINT 'THIS PROGRAM RUNS MATH'
     PRINT 'DO YOU WANT TO ADD (A) MULTIPLY (M) OR DIVIDE (D)'
     INPUT P
     M = 'M'
     A = 'A'
     D = 'D'
     IF P = A THEN GOTO 1000 ELSE GOTO 1300
1300 IF P = D THEN GOTO 1200 ELSE GOTO 700
1000 PRINT 'THE FORMAT IS X = A + B'
     PROMPT CHAR(65)
     INPUT A
300  PROMPT CHAR(66)
     INPUT B
     X = A + B
     PRINT X
     Y = 'Y'
     PRINT 'CONTINUE'
     PROMPT CHAR(0)
     INPUT C
     IF C = Y THEN GOTO 200 ELSE GOTO 600
200  PRINT 'IS THIS TO BE A CHAIN'
     INPUT D
     A = X
     IF D = Y THEN GOTO 300 ELSE GOTO 600
500  PRINT 'JUST WHAT DO YOU WANT'
700  PRINT 'THE FORMAT TO MULTIPLY IS X = A * B'
     PROMPT CHAR(65)
     INPUT A
     PROMPT CHAR(66)
1100 INPUT B
     A = A * B
     PRINT A
     A = A
     PRINT 'IS THIS A CHAIN'
     Y = 'Y'
     PROMPT CHAR(38)
     INPUT U
     IF U= Y THEN GOTO 1100 ELSE GOTO 600
1200 PRINT 'THE FORMAT FOR DIVISION IS X = A/B'
     PROMPT CHAR(65)
     INPUT A
     PROMPT CHAR(66)
     INPUT B
     X = A / B
     PRINT X
     PRINT 'DO YOU WANT TO DIVIDE SOME MORE'
     PROMPT CHAR(35)
     INPUT J
     Y = 'Y'
     IF J = Y THEN GOTO 1200 ELSE GOTO 600
600  STOP
END
