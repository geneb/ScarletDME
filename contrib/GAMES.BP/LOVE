       NEXT II
     NEXT JJ
     CC=0
90   A1=1;PP=1;CC=CC+1
     IF CC=37 THEN GOTO 99
     PRINT
     PRINT SPACE(24):
91   XX=XX+1
     AA=FIELD(FORM,',',XX)
     A1=A1+AA
     IF PP=1 THEN GOTO 93
     PRINT STR(' ',AA): ;*LEAVE HANGING
