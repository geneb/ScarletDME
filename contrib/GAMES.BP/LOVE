     PRINTER ON
     LL=LEN(MSG)
     PRINT;PRINT;PRINT;PRINT;PRINT;PRINT;PRINT;PRINT;PRINT;PRINT ;*10 HERE
     FOR JJ = 0 TO INT(60/LL)
