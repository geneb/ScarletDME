$internal
$no.symbols
$no.xref
$recursive

subroutine repsubst(dyn.array, f, v, s, p, q, val)

   x = dyn.array<f,v,s>
   x[p,q] = val
   dyn.array<f,v,s> = x
   return
end

* END-CODE
